    "version": "0.2.0",
    "configurations": [
    {
        "type": "gdb",
        "request": "launch",
        "name": "Attach to PID",
        "target": "[PID]",
        "cwd": "${workspaceRoot}"
    },
        {
            "name": "(lldb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/decaf",
            "args": [
                "-p",
                "-s",
                "${workspaceFolder}/../tests/animals.decaf"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "lldb"
        }
    ]
}